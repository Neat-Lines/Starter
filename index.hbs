{{!< default}}

{{> blogHeader }}

<div class="gh-page">
    <div class="gh-container blog-index">

        <div class="gh-postfeed">
        {{#foreach posts visibility="all"}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        <div class="sidebar">
            <h2 class="sidebar-title">Categories</h2>
            <div class="sidebar-categories">
            {{#get "tags"}}
                {{#foreach tags}}

                    <a class="sidebar-category" href="{{url}}">{{name}}</a>
                
                {{/foreach}}
            {{/get}}
            </div>
            <h2 class="sidebar-title">Popular Posts</h2>
            {{#foreach posts featured=true}}
                
                {{> "popCard"}}

            {{/foreach}}
        </div>

    </div>
</div>
