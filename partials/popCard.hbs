<article class="gh-card sidebar-card {{post_class}}">
    <a class="gh-card-link" href="{{url}}">
        {{#if feature_image}}
        <img class="gh-card-image sidebar-card-img" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image
            size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
            sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size=" m"}}" alt="{{title}}" />
        {{/if}}
        <div class="gh-card-content">
            <h2 class="gh-card-title sidebar-card-title">{{title}}</h2>
        </div>
    </a>
</article>